<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>

	<!-- SEVERLET TAGS -->
	<servlet>
		<servlet-name>ADD</servlet-name>
		<servlet-class>com.practice.calci.AdditionServerlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SUB</servlet-name>
		<servlet-class>com.practice.calci.SubractionServerlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>DIV</servlet-name>
		<servlet-class>com.practice.calci.DIvisionServerlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>MUL</servlet-name>
		<servlet-class>com.practice.calci.MultiplactionServerlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>MOD</servlet-name>
		<servlet-class>com.practice.calci.ModulusServerlet</servlet-class>
	</servlet>


	<!--SERVERLET MAPPING TAGS -->
	<servlet-mapping>
		<servlet-name>ADD</servlet-name>
		<url-pattern>/add-numbers</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SUB</servlet-name>
		<url-pattern>/sub-numbers</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DIV</servlet-name>
		<url-pattern>/div-numbers</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MUL</servlet-name>
		<url-pattern>/mul-numbers</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MOD</servlet-name>
		<url-pattern>/mod-numbers</url-pattern>
	</servlet-mapping>
</web-app>
